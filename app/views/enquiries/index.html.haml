.enquiries
  .control-buttons
    = link_to "Create Enquiry", new_enquiry_path, :class => 'btn btn-primary'
  %h2
    My Enquiries
  %hr

%table.table.table-striped
  %tr
    %th Trip Type
    %th Source
    %th Destination
    %th Departure Date
  - if @enquiries.present?
    - @enquiries.each do |enquiry|
      %tr
        %td= enquiry.trip_type
        %td= enquiry.source
        %td= enquiry.destination
        %td= enquiry.departure_date
