- @content_for_title = "Enquiries"
.enquiries
  .control-buttons
    = link_to "Create Enquiry", new_enquiry_path, :class => 'btn btn-primary'
  %h2
    My Enquiries
  %hr

%table.table.table-striped
  %tr
    %th Trip type
    %th{:style => "width: 300px"} Source
    %th{:style => "width: 300px"} Destination
    %th Departure date
    %th Return date
    %th{:style => "width: 100px"} Controls
  - if @enquiries.present?
    - @enquiries.each do |enquiry|
      %tr
        %td= enquiry.trip_type
        %td{:style => "width: 300px"}
          = enquiry.source
        %td{:style => "width: 300px"}
          = enquiry.destination
        %td= enquiry.departure_date.strftime("%d-%m-%Y")
        %td
          - if enquiry.return_date.present?
            = enquiry.return_date.strftime("%d-%m-%Y")
        %td{:style => "width: 100px"}
          = link_to "View more", "/enquiries/#{enquiry.id}", :class => 'btn'

= paginate @enquiries
