!!!
%html
  %head
    %title OnlineAirlinePortal
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{:type => "button", "data-toggle" => "collapse", "data-target" => ".nav-collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
          = link_to "OnlineAirlineportal", root_path, :class => 'brand'
          .container.nav-collapse
            %ul.nav
              %li= link_to "Enquiries", '' if current_user
            %ul.nav.pull-right
              - if current_user
                %li.dropdown
                  %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                    = "Welcome #{current_user.email}"
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Sign out", destroy_session_path
    .container
      - if content_for?(:sub_nav_bar)
        = yield :sub_nav_bar
      - if notice
        .alert.alert-success
          %a{:class=>"close", "data-dismiss"=>"alert"} ×
          = notice
      - if alert
        .alert.alert-error
          %a{:class=>"close", "data-dismiss"=>"alert"} ×
          = alert
      .content
        .row
          - if content_for?(:sidebar)
            .span9
              = yield
            .span3
              = yield :sidebar
          - else
            .span12
              = yield 

